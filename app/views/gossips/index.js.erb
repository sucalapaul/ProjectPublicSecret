$('#gossips_container').append('<% @gossips.each do |gossip| %><%= j render partial: "gossip", locals: { gossip: gossip, comments: 3}, formats: [:html] %><% end %>');

<% if @gossips.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate(@gossips) %>');
  $('.pagination').hide();
<% else %>
  $('.pagination').remove();
<% end %>