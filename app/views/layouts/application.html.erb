  <!-- div to animate down for wrighting posts -->
  <form id="post_gossip_form" style="display:none;margin-bottom:0;z-index:1000;position:relative">
    <div class="post-gossip clearfix">
      <div class="post-wrapper">
         <p id="gossip_content_counter" style="color:#888;float:right;margin-bottom:0pc;margin-top:15px;"></p>
        <p style="margin-bottom:0;color:white;font-size:17px"> What's the word? </p>

          <div class="post-well clearfix">
              
              <textarea id="gossip_content" name="gossip[content]" class="input-block-level" rows="3" style="max-height:90px;max-width:560px;"></textarea>
               <button type="button" class="btn btn-primary pull-right disabled" id="button_post_gossip" ><i class="icon-new-gossip"></i> OK </button>
               <div class="btn-toolbar pull-right" style="margin:0 20px 0 0">
                  <div class="btn-group toggle-radio">
                    <a class="btn" data-value="1" href="#"><i class="icon-lock"></i> anonymous</a>
                    <a class="btn" data-value="0" href="#"><i class="icon-user"></i> you</a>
                    <input id="gossip_private" name="gossip[private]" type="hidden" value="0" />
                  </div>
                </div>
                <p style="float:right;margin-top:5px;margin-bottom:0px;margin-right:15px;color:white;font-size:12px;">Post as:</p>
                <p id="gossip_circle_info" style="margin-top:5px;margin-bottom:0px;margin-right:15px;color:white;font-size:12px;">Select a circle!</p>
               
                <div class="btn-group" id="dropdwn_gossip_circle">
                  <button class="btn dropdown-toggle" data-toggle="dropdown">Change Circle <span class="caret"></span></button>
                  <ul class="dropdown-menu">
                    <%= circle_list %>
                    <li class="divider"></li>
                    <li><div class="btn btn-primary btn-small" style="margin-left:20px;margin-bottom:5px;">Create new circle</div></li>
                  </ul>
                  <input id="gossip_circle_id" name="gossip[circle_id]" type="hidden">
                </div>
               <!--  <p  style="margin-top:5px;margin-bottom:0px;margin-right:15px;color:white;font-size:12px;">Choose a circle!</p> -->
          </div>
      </div>
    </div>
  </form>

