<li class="comment clearfix"
	<% if defined? hidden %> 
		style="display:none"
	<% end %>
>
	<span class="avatar-mini" 
		<%= comment.private? ? "" : "style=\"background-image: url('http://graph.facebook.com/#{comment.user.uid}/picture?type=small');\" ".html_safe %> >
	</span>
		 <strong><%= comment.private? ? comment.user.nickname : link_to(comment.user.name, "/users/#{comment.user.id}")  %></strong>
		  <p class="pull-right" style="color:#777;margin-bottom:0;font-size:12px"><%= timeago comment.created_at  %></p> 
		  <p style="font-size:14px;line-height:1.3;margin-left:42px"><%= comment.content %></p>
		  
</li>